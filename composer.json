{
	"name": "nextcloud/ocs_api_viewer",
	"description": "View OCS API specifications for installed apps",
	"type": "project",
	"license": "AGPL-3.0-or-later",
	"authors": [
		{
			"name": "Kate DÃ¶en"
		}
	],
	"require": {
		"bamarni/composer-bin-plugin": "^1.9"
	},
	"require-dev": {
		"nextcloud/ocp": "dev-stable32"
	},
	"scripts": {
		"post-install-cmd": [
			"@composer bin all install --ansi"
		],
		"post-update-cmd": [
			"@composer bin all install --ansi"
		],
		"lint": "find . -name \\*.php -not -path './vendor/*' -print0 | xargs -0 -n1 php -l",
		"cs:check": "php-cs-fixer fix --dry-run --diff",
		"cs:fix": "php-cs-fixer fix",
		"psalm": "psalm --threads=$(nproc) --no-cache",
		"psalm:update-baseline": "psalm --threads=$(nproc) --no-cache --update-baseline"
	},
	"config": {
		"allow-plugins": {
			"bamarni/composer-bin-plugin": true,
			"composer/package-versions-deprecated": true
		},
		"platform": {
			"php": "8.1"
		},
		"sort-packages": true
	}
}
